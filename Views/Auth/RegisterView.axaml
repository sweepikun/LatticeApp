<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Lattice.ViewModels"
             x:Class="Lattice.Views.Auth.RegisterView"
             x:DataType="vm:RegisterViewModel">
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Border Width="400" Padding="40" HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="{DynamicResource CardBrush}" CornerRadius="12"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                BoxShadow="0 8 32 0 #10000000">
            <StackPanel Spacing="20">
                <!-- Logo & Title -->
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <Border Width="56" Height="56" CornerRadius="12" 
                            Background="{DynamicResource AccentLightBrush}"
                            HorizontalAlignment="Center">
                        <TextBlock Text="L" FontSize="28" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Create account" FontSize="24" FontWeight="SemiBold"
                               HorizontalAlignment="Center" 
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Join Lattice to manage your servers" FontSize="13"
                               HorizontalAlignment="Center" 
                               Foreground="{DynamicResource TextTertiaryBrush}"/>
                </StackPanel>
                
                <!-- Form -->
                <StackPanel Spacing="12">
                    <TextBox Watermark="Username" Text="{Binding Username}"
                             IsEnabled="{Binding !IsCreating}"
                             CornerRadius="8" Padding="14,12"/>
                    <TextBox Watermark="Email" Text="{Binding Email}"
                             IsEnabled="{Binding !IsCreating}"
                             CornerRadius="8" Padding="14,12"/>
                    <PasswordBox Watermark="Password"
                                 IsEnabled="{Binding !IsCreating}"
                                 CornerRadius="8" Padding="14,12"
                                 PasswordChanged="OnPasswordChanged"/>
                    <PasswordBox Watermark="Confirm password"
                                 IsEnabled="{Binding !IsCreating}"
                                 CornerRadius="8" Padding="14,12"
                                 PasswordChanged="OnConfirmPasswordChanged"/>
                    
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="{DynamicResource StatusErrorBrush}"
                               TextWrapping="Wrap" FontSize="13"
                               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    
                    <Button Content="Create account" Command="{Binding RegisterCommand}"
                            IsEnabled="{Binding !IsCreating}"
                            Classes="lattice-accent"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                            Padding="16,14" Margin="0,8,0,0"/>
                </StackPanel>
                
                <!-- Footer -->
                <Button Content="Back to sign in" Command="{Binding GoToLoginCommand}"
                        IsEnabled="{Binding !IsCreating}"
                        Classes="lattice-ghost"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
