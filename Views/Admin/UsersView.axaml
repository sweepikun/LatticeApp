<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Lattice.ViewModels"
             x:Class="Lattice.Views.Admin.UsersView"
             x:DataType="vm:UsersViewModel">
    
    <Grid RowDefinitions="Auto,*" Background="{DynamicResource BackgroundBrush}">
        <Border Grid.Row="0" Padding="24,16" Background="{DynamicResource CardBrush}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="用户管理" FontSize="18" FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <Button Grid.Column="1" Content="+ 新建用户" Command="{Binding ShowAddCommand}"
                        Classes="lattice-accent" Padding="16,8"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="24" Spacing="16">
                <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoading}"
                             Height="2" HorizontalAlignment="Stretch"/>
                
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="{DynamicResource StatusErrorBrush}"
                           IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                <Border IsVisible="{Binding ShowAddForm}" 
                        Background="{DynamicResource CardBrush}" CornerRadius="12" Padding="20"
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <StackPanel Spacing="16">
                        <TextBlock Text="新建用户" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBox Watermark="用户名" Text="{Binding NewUserName}"
                                 Classes="lattice-input" Padding="14,12"/>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Content="创建" Command="{Binding AddUserCommand}"
                                    Classes="lattice-accent" Padding="16,10"/>
                            <Button Content="取消" Command="{Binding CancelAddCommand}"
                                    Classes="lattice-secondary" Padding="16,10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <ItemsControl ItemsSource="{Binding Users}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBrush}" CornerRadius="12" Padding="20" Margin="0,0,0,12"
                                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Token}" FontSize="12" 
                                                   FontFamily="Consolas, monospace"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"/>
                                        <TextBlock Text="{Binding Role}" FontSize="11"
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                        <Button Content="重置令牌" 
                                                Command="{Binding $parent[ItemsControl].((vm:UsersViewModel)DataContext).RegenerateTokenCommand}"
                                                CommandParameter="{Binding}"
                                                Classes="lattice-secondary" Padding="12,8" FontSize="12"/>
                                        <Button Content="删除" 
                                                Command="{Binding $parent[ItemsControl].((vm:UsersViewModel)DataContext).DeleteUserCommand}"
                                                CommandParameter="{Binding}"
                                                Classes="lattice-danger" Padding="12,8" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
