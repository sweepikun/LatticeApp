<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Lattice.ViewModels"
             x:Class="Lattice.Views.Dashboard.ServerListView"
             x:DataType="vm:ServerListViewModel">
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" Classes="lattice-sidebar" Padding="16">
            <StackPanel Spacing="4">
                <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,24">
                    <Border Width="36" Height="36" CornerRadius="8" 
                            Background="{DynamicResource AccentBrush}">
                        <TextBlock Text="L" FontSize="18" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Lattice" FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Content="Servers" Classes="nav-item active"
                        HorizontalAlignment="Stretch"/>
                <Button Content="Users" Command="{Binding ManageUsersCommand}"
                        Classes="nav-item" HorizontalAlignment="Stretch"
                        IsVisible="{Binding IsAdmin}"/>
                <Button Content="Settings" Classes="nav-item"
                        HorizontalAlignment="Stretch"/>
                
                <Border Height="1" Background="{DynamicResource DividerBrush}" 
                        Margin="0,16"/>
                
                <StackPanel Margin="4,8" IsVisible="{Binding IsConnected}">
                    <TextBlock Text="{Binding UserName}" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="13"/>
                    <TextBlock Text="Admin" 
                               Foreground="{DynamicResource AccentBrush}"
                               FontSize="12" Margin="0,2,0,0"
                               IsVisible="{Binding IsAdmin}"/>
                </StackPanel>
                
                <Button Content="Sign out" Command="{Binding LogoutCommand}"
                        Classes="nav-item" HorizontalAlignment="Stretch"
                        Margin="0,8,0,0" IsVisible="{Binding IsConnected}"/>
            </StackPanel>
        </Border>
        
        <Border Grid.Column="1" Padding="32">
            <ScrollViewer>
                <StackPanel Spacing="24">
                    <!-- Not Connected State -->
                    <StackPanel Spacing="16" HorizontalAlignment="Center" 
                                VerticalAlignment="Center" Margin="0,64"
                                IsVisible="{Binding !IsConnected}">
                        <Border Width="80" Height="80" CornerRadius="20"
                                Background="{DynamicResource CardBrush}"
                                HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ”—" FontSize="36" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="No Backend Connected" Classes="title-large"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Connect to a Lattice backend server to manage your Minecraft servers" 
                                   Classes="caption"
                                   HorizontalAlignment="Center" TextAlignment="Center"
                                   MaxWidth="300"/>
                        <Button Content="+ Connect to Backend" Command="{Binding ConnectCommand}"
                                Classes="lattice-accent"
                                HorizontalAlignment="Center" Margin="0,16,0,0"/>
                    </StackPanel>

                    <!-- Connected State -->
                    <Grid ColumnDefinitions="*,Auto" IsVisible="{Binding IsConnected}">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Servers" Classes="title-large"/>
                            <TextBlock Text="Manage your Minecraft servers" 
                                       Classes="caption" Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button Content="+ Create Server" Command="{Binding CreateServerCommand}"
                                Classes="lattice-accent" VerticalAlignment="Center"
                                IsVisible="{Binding IsAdmin}"/>
                    </Grid>

                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="{DynamicResource StatusErrorBrush}"
                               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                    <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoading}"
                                 Height="2" HorizontalAlignment="Stretch"/>

                    <ItemsControl ItemsSource="{Binding Servers}" IsVisible="{Binding IsConnected}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding $parent[ItemsControl].((vm:ServerListViewModel)DataContext).SelectServerCommand}"
                                        CommandParameter="{Binding}"
                                        Classes="lattice-card" HorizontalAlignment="Stretch"
                                        Margin="0,0,0,12" Padding="16">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <StackPanel Spacing="4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Name}" 
                                                       Classes="title"
                                                       FontSize="16"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Classes="caption">
                                                    <Run Text="{Binding Type}"/>
                                                    <Run Text="â€¢"/>
                                                    <Run Text="{Binding Version}"/>
                                                    <Run Text="â€¢"/>
                                                    <Run Text=":"/>
                                                    <Run Text="{Binding Port}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                        <Border Classes="status-badge status-stopped" 
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Status}" 
                                                       Foreground="White" FontSize="12"
                                                       FontWeight="Medium"/>
                                        </Border>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Spacing="16" HorizontalAlignment="Center" 
                                VerticalAlignment="Center" Margin="0,64"
                                IsVisible="{Binding ShowEmptyState}">
                        <Border Width="64" Height="64" CornerRadius="16"
                                Background="{DynamicResource CardBrush}"
                                HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“¦" FontSize="28" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="No servers yet" Classes="title"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Create your first server to get started" 
                                   Classes="caption"
                                   HorizontalAlignment="Center"/>
                        <Button Content="Create Server" Command="{Binding CreateServerCommand}"
                                Classes="lattice-accent"
                                HorizontalAlignment="Center" Margin="0,8,0,0"
                                IsVisible="{Binding IsAdmin}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
