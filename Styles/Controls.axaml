<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- WinUI3风格按钮 -->
    <Style Selector="Button.lattice-accent">
        <Setter Property="Background" Value="{DynamicResource AccentButtonBackground}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Button.lattice-accent:pointerover">
        <Setter Property="Background" Value="{DynamicResource AccentButtonBackgroundHover}"/>
        <Setter Property="Opacity" Value="0.9"/>
    </Style>
    <Style Selector="Button.lattice-accent:pressed">
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <Style Selector="Button.lattice-ghost">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.lattice-ghost:pointerover">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundHover}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="Button.lattice-danger">
        <Setter Property="Background" Value="{DynamicResource StatusErrorBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.lattice-success">
        <Setter Property="Background" Value="{DynamicResource StatusRunningBrush}"/>
        <Setter Property="Foreground" Value="#1A1A1A"/>
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- 卡片容器 -->
    <Style Selector="Border.lattice-card">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource SpacingMedium}"/>
    </Style>

    <!-- 侧边栏样式 -->
    <Style Selector="Border.lattice-sidebar">
        <Setter Property="Background" Value="{DynamicResource SidebarBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource DividerBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>

    <!-- 输入框 -->
    <Style Selector="TextBox.lattice-input">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
    </Style>
    <Style Selector="TextBox.lattice-input:focus /template/ PART_BorderElement">
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- 状态标签 -->
    <Style Selector="Border.status-badge">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="10,4"/>
    </Style>
    <Style Selector="Border.status-running">
        <Setter Property="Background" Value="{DynamicResource StatusRunningBrush}"/>
    </Style>
    <Style Selector="Border.status-starting">
        <Setter Property="Background" Value="{DynamicResource StatusStartingBrush}"/>
    </Style>
    <Style Selector="Border.status-stopped">
        <Setter Property="Background" Value="{DynamicResource StatusStoppedBrush}"/>
    </Style>

    <!-- 导航按钮 -->
    <Style Selector="Button.nav-item">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.nav-item:pointerover">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundHover}"/>
    </Style>
    <Style Selector="Button.nav-item.active">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- 标题文字 -->
    <Style Selector="TextBlock.title-large">
        <Setter Property="FontSize" Value="{StaticResource FontSizeTitleLarge}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="{StaticResource FontSizeTitle}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.body">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="{StaticResource FontSizeCaption}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}"/>
    </Style>

    <!-- 分割线 -->
    <Style Selector="Separator.lattice">
        <Setter Property="Background" Value="{DynamicResource DividerBrush}"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>
</ResourceDictionary>
