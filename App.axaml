<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Lattice.App"
             RequestedThemeVariant="Dark">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/Controls.axaml"/>
    </Application.Styles>
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/Themes.axaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <FontFamily x:Key="ContentFontFamily">Microsoft YaHei UI, Segoe UI, Arial</FontFamily>
            <FontFamily x:Key="ContentFontFamilyLight">Microsoft YaHei UI, Segoe UI Light, Arial</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
